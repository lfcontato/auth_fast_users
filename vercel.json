{
  "version": 2,
  "builds": [
    { "src": "web/**", "use": "@vercel/static" },
    { "src": "api/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/$", "dest": "web/index.html" },
    { "src": "^/env$", "dest": "web/env" },
    // Não capturar caminhos /api/* com o estático; deixe irem para serverless
    { "src": "^/(?!api/)(.*)$", "dest": "web/$1" }
  ]
}
